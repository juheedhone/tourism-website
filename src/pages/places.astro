---
import "../styles/global.css";

const places = [
  {
    name: "Hawa Mahal",
    desc: "Known as the 'Palace of Winds', Hawa Mahal is a five-storey iconic pink sandstone structure with 953 windows, built for royal women to observe street festivals in privacy.",
    img: "/places/hawa.jpg",
  },
  {
    name: "Amber Fort",
    desc: "Amber Fort is a grand hilltop fortress showcasing Rajput architecture with courtyards, temples, mirror palace, and scenic elephant rides. A must-visit in Jaipur.",
    img: "/places/amer-fort.jpg",
  },
  {
    name: "Jal Mahal",
    desc: "The stunning Jal Mahal sits in the middle of Man Sagar Lake. Its serene ambience and beautiful reflections make it a favorite spot for evening photography.",
    img: "/places/jal-mahal.jpg",
  },
  {
    name: "City Palace",
    desc: "Located in the heart of Jaipur, the City Palace is a blend of Mughal and Rajasthani architecture. It houses royal museums, artifacts, and beautiful courtyards.",
    img: "/places/city-palace.jpeg",
  },
  {
    name: "Jantar Mantar",
    desc: "A UNESCO World Heritage site with architectural astronomical instruments built by Maharaja Sawai Jai Singh.",
    img: "/places/jantar-mantar.jpg",
  },
  {
    name: "Nahargarh Fort",
    desc: "Offering the best panoramic view of Jaipur city, especially during sunset. A popular film shooting spot.",
    img: "/places/nahargarh-fort.jpeg",
  },
];
---

<section class="text-center py-20">
  <h2 class="text-4xl font-bold text-[#8D6E63]">Tourist Places in Jaipur</h2>
  <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
    Explore the most popular and historical destinations of Jaipur â€” the Pink
    City of India.
  </p>
</section>

<section class="px-6 md:px-20 pb-20 space-y-16">
  {
    places.map((place, idx) => (
      <div
        class={`flex flex-col md:flex-row items-center gap-8 ${
          idx % 2 !== 0 ? "md:flex-row-reverse" : ""
        }`}
      >
        <div class="md:w-1/2">
          <img
            src={place.img}
            alt={place.name}
            class="rounded-xl shadow-lg w-full h-80 object-cover"
          />
        </div>

        <div class="md:w-1/2">
          <h3 class="text-3xl font-bold text-[#795548]">{place.name}</h3>
          <p class="mt-4 text-gray-600 leading-relaxed">{place.desc}</p>
        </div>
      </div>
    ))
  }
</section>
